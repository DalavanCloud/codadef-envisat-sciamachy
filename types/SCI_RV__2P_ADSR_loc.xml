<?xml version="1.0"?>
<cd:Record format="binary" name="SCI_RV__2P_ADSR_loc" last-modified="2010-08-26" xmlns:cd="http://www.stcorp.nl/coda/definition/2008/07">
  <cd:Field name="dsr_time">
    <cd:Time timeformat="binary_envisat_datetime">
      <cd:Description>Start time of the DSR</cd:Description>
    </cd:Time>
  </cd:Field>
  <cd:Field name="attach_flag">
    <cd:Integer>
      <cd:Description>Attachment Flag (set to 1 if all MDSRs corresponding to this ADSR are blank, set to zero otherwise)</cd:Description>
      <cd:BitSize>8</cd:BitSize>
      <cd:NativeType>uint8</cd:NativeType>
    </cd:Integer>
  </cd:Field>
  <cd:Field name="integr_time">
    <cd:Integer>
      <cd:Description>Integration time of this geolocation entity</cd:Description>
      <cd:Unit>1/16 s</cd:Unit>
      <cd:Conversion numerator="1.000000" denominator="16.000000">
        <cd:Unit>s</cd:Unit>
      </cd:Conversion>
      <cd:BitSize>16</cd:BitSize>
      <cd:NativeType>uint16</cd:NativeType>
    </cd:Integer>
  </cd:Field>
  <cd:Field name="coor_grd">
    <cd:Array>
      <cd:Description>Four corner coordinates of the nadir ground pixels</cd:Description>
      <cd:Dimension>4</cd:Dimension>
      <cd:Record>
        <cd:Field name="latitude">
          <cd:Integer>
            <cd:Unit>1e-6 degrees_north</cd:Unit>
            <cd:Conversion numerator="1.000000" denominator="1000000.000000">
              <cd:Unit>degrees_north</cd:Unit>
            </cd:Conversion>
            <cd:BitSize>32</cd:BitSize>
            <cd:NativeType>int32</cd:NativeType>
          </cd:Integer>
        </cd:Field>
        <cd:Field name="longitude">
          <cd:Integer>
            <cd:Unit>1e-6 degrees_east</cd:Unit>
            <cd:Conversion numerator="1.000000" denominator="1000000.000000">
              <cd:Unit>degrees_east</cd:Unit>
            </cd:Conversion>
            <cd:BitSize>32</cd:BitSize>
            <cd:NativeType>int32</cd:NativeType>
          </cd:Integer>
        </cd:Field>
      </cd:Record>
    </cd:Array>
  </cd:Field>
</cd:Record>
